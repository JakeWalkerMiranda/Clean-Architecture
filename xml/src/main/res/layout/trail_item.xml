<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/card_trail_width"
    android:layout_height="@dimen/card_trail_height"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="@dimen/card_trail_margin"
    android:elevation="@dimen/card_trail_elevation"
    android:background="@drawable/bg_trail_card">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/card_trail_image_size"
        android:layout_height="@dimen/card_trail_image_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/card_trail_image_margin_top"
        android:src="@drawable/ic_medal" />

    <TextView
        android:id="@+id/title"
        style="@style/TrailsCardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_trail_title_margin_top"
        tools:text="Lean Ágil" />

</LinearLayout>