<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CleanArchitecture.Default" parent="Theme.CleanArchitecture">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red_dark</item>
    </style>

    <style name="Theme.CleanArchitecture.Default.Title">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Theme.CleanArchitecture.Default.Body1">
        <item name="android:textSize">@dimen/font_compact</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Theme.CleanArchitecture.Default.Body2">
        <item name="android:textSize">@dimen/font_tiny</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="Theme.CleanArchitecture.Default.Button">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/red</item>
    </style>

    <style name="TrailsTitle" parent="Theme.CleanArchitecture.Default.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/trail_title_margin_top</item>
    </style>

    <style name="TrailsCardTitle" parent="Theme.CleanArchitecture.Default.Title">
        <item name="android:textColor">@color/black_light</item>
        <item name="android:layout_marginTop">@dimen/card_trail_title_margin_top</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ContentTitle" parent="Theme.CleanArchitecture.Default.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/content_title_margin_top</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ContentCardTitle" parent="Theme.CleanArchitecture.Default.Title">
        <item name="android:textColor">@color/black_light</item>
        <item name="android:layout_marginTop">@dimen/card_content_title_margin_top</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="ContentCardContentType" parent="Theme.CleanArchitecture.Default.Body2">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/card_content_type_padding_top</item>
        <item name="android:layout_marginStart">@dimen/card_content_type_margin_start</item>
        <item name="android:paddingStart">@dimen/card_content_type_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/card_content_type_padding_horizontal</item>
        <item name="android:background">@drawable/bg_content_type</item>
    </style>

    <style name="ContentCardDescription" parent="Theme.CleanArchitecture.Default.Body1">
        <item name="android:textColor">@color/black_light</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">@dimen/card_content_description_margin_top</item>
        <item name="android:layout_marginStart">@dimen/card_content_description_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/card_content_description_margin_horizontal</item>
    </style>

    <style name="ContentButtonAccess" parent="Theme.CleanArchitecture.Default.Button">
        <item name="android:text">@string/access</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_up_right</item>
        <item name="android:paddingEnd">@dimen/card_content_button_padding_end</item>
        <item name="android:layout_width">@dimen/card_content_button_width</item>
        <item name="android:layout_height">@dimen/card_content_button_height</item>
    </style>
    
</resources>